<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="view_autoparts_part_name_tree">
      <field name="name">autoparts list</field>
      <field name="model">autoparts.part_name</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="autoparts_part_name_action_window">
      <field name="name">part_name window</field>
      <field name="res_model">autoparts.part_name</field>
      <field name="view_mode">tree,form</field>
    </record>

</data>
</odoo>